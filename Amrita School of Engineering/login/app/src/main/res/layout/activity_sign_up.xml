<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkground"
    android:orientation="vertical"
    tools:context=".SignUp">

    <Space
        android:layout_width="match_parent"
        android:layout_height="74dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editFName"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rndbtn"
            android:drawableLeft="@drawable/ic_action_person"
            android:hint="  FirstName"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editLName"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="@drawable/rndbtn"
            android:drawableLeft="@drawable/ic_action_person"
            android:hint="  LastName"
            android:inputType="textPersonName"
            android:padding="10dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editemail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rndbtn"
        android:drawableLeft="@drawable/ic_action_name"
        android:hint="  Email"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editpassword"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:hint="  password"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rndbtn"
        android:drawableLeft="@drawable/ic_action_lock"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/editcnfpassword"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:hint="  Confirm password"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rndbtn"
        android:drawableLeft="@drawable/ic_action_lock"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/editph"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rndbtn"
        android:drawableLeft="@drawable/ic_action_phone"
        android:hint="  Phone Number"
        android:inputType="phone"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="       Gender"
        android:textSize="19dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="19dp"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="other" />


        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="agree to terms and condition
" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <Button
            android:id="@+id/btnsignup"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            android:background="@drawable/realbtn"
            android:text="Signup"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="           Have an acccount" />

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="154dp"
            android:background="@drawable/realbtn"
            android:text="Login"
            android:textColor="@color/colorAccent" />
    </LinearLayout>




</LinearLayout>